@model Music_Station0730.Models.Content
@using Music_Station0730.Models


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row table-bordered text-center">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="col-3 col-md-3">
            <!-- class="col-md-10"-->
            @{
                if (Session["UserName"] == null)
                {
                    <input class="form-control" type="text" name="UserName" value="訪客" readonly="readonly"/>
                    @*@Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })*@
                }
                else
                {
                    <input class="form-control" type="text" name="UserName" value='@Session["Username"].ToString()' readonly="readonly" />
                }
            }
            
            
        </div>

        <div class="col-7 col-md-6">
            <!-- class="col-md-10"-->
            @Html.EditorFor(model => model.Content1, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Content1, "", new { @class = "text-danger" })
        </div>
        <div class="col-2 col-md-2">
            <!--class="col-md-offset-2 col-md-10"-->
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
}